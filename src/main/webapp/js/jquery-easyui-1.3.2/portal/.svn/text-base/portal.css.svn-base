.portal{
	padding:0;
	margin:0;
	border:1px solid #99BBE8;
	overflow:auto;
}
.portal-noborder{
	border:0;
}
.portal-panel{
	margin-bottom:5px;
}
.portal-column-td{
	vertical-align:top;
}	
.portal-column{
	padding:3px 0 5px 5px;
	overflow:hidden;
}
.portal-column-left{
	padding-left:3px;
}
.portal-column-right{
	padding-right:3px;
}
.portal-proxy{
	opacity:0.6;
	filter:alpha(opacity=60);
}
.portal-spacer{
	border:3px dashed #eee;
	margin-bottom:10px;
}